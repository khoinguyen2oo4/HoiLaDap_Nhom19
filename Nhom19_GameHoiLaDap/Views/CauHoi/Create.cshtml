@model Nhom19_GameHoiLaDap.Models.CauHoi

<h2>Thêm câu hỏi mới</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-2">
        <label asp-for="NoiDung" class="form-label"></label>
        <input asp-for="NoiDung" class="form-control" />
        <span asp-validation-for="NoiDung" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="DapAnDung" class="form-label"></label>
        <input asp-for="DapAnDung" class="form-control" />
        <span asp-validation-for="DapAnDung" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="DapAnSai1" class="form-label"></label>
        <input asp-for="DapAnSai1" class="form-control" />
        <span asp-validation-for="DapAnSai1" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="DapAnSai2" class="form-label"></label>
        <input asp-for="DapAnSai2" class="form-control" />
        <span asp-validation-for="DapAnSai2" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="DapAnSai3" class="form-label"></label>
        <input asp-for="DapAnSai3" class="form-control" />
        <span asp-validation-for="DapAnSai3" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="DoKho" class="form-label"></label>
        <input asp-for="DoKho" type="number" class="form-control" />
        <span asp-validation-for="DoKho" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
