@model List<Nhom19_GameHoiLaDap.Models.CauHoi>

<h2>Danh sách câu hỏi</h2>

<a asp-action="Create" class="btn btn-success mb-3">Thêm câu hỏi mới</a>

<table class="table">
    <thead>
        <tr>
            <th>Nội dung</th>
            <th>Độ khó</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NoiDung</td>
                <td>@item.DoKho</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CauHoiId" class="btn btn-primary btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.CauHoiId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

